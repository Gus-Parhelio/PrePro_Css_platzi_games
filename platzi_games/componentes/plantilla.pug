-var titulo = "Titulo Principal"
-var titulos = ["Titulo Principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3",  ]
-var usuario = "David"
mixin caja(imagen,titulo,contenido)
    .caja 
            .caja__imagen: img(src="images/"+imagen, alt="")
            .caja__contenido
                h3=titulo
                p=contenido 
doctype html
html(lang="en")
    include head.pug
    body
        header
            h1 PlatziGames
            if usuario 
                a(href="#") Hola!! #{usuario}
            else   
                a.boton(href="#") Registrarse 
        block contenidos 